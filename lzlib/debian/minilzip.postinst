#!/bin/sh

set -e

case "${1}" in
	configure)
		update-alternatives --quiet \
			--install /usr/bin/lzip lzip /usr/bin/lzip.minilzip 1000 \
			--slave /usr/share/man/man1/lzip.1.gz lzip.1.gz /usr/share/man/man1/lzip.minilzip.1.gz
		;;

	abort-upgrade|abort-remove|abort-deconfigure)

		;;

	*)
		echo "postinst called with unknown argument \`${1}'" >&2
		exit 1
		;;
esac

#DEBHELPER#

exit 0
